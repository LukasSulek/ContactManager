@model ECoding_MVC_app.Models.DTO.ContactDTOs.ContactDTO

@{
    ViewData["Title"] = "Delete Contact";
}


<div class="title-container">
    <h1>Delete Contact</h1>
</div>

<h4 class="subtitle">
    Are you sure you want to delete the following contact?
</h4>


<form asp-controller="Contacts" asp-action="Delete" method="post">
    
    <div class="form-group form-group-gap">
        <label class="form-label form-label-gap" asp-for="FirstName"><strong>First Name:</strong></label>
        
        @Html.DisplayFor(model => model.FirstName);
    </div>


    <div class="form-group form-group-gap">
        <label class="form-label form-label-gap" asp-for="LastName"><strong>Last Name:</strong></label>
        @Html.DisplayFor(model => model.LastName);
    </div>


    <div class="form-group form-group-gap">
        <label class="form-label form-label-gap" asp-for="Email"><strong>Email:</strong></label>
        @Html.DisplayFor(model => model.Email);
    </div>


    <div class="form-group form-group-gap">
        <label class="form-label form-label-gap" asp-for="PhoneNumber"><strong>Phone Number:</strong></label>
        @Html.DisplayFor(model => model.PhoneNumber);
    </div>

    <div class="action-buttons-container">
        <span class="link cancel-button">
            <a asp-controller="Contacts" asp-action="Index">Cancel</a>
        </span>
        <span class="link create-button">
            <button type="submit">Delete</button>
        </span>
    </div>

</form>


